pipeline {
    agent any
    environment {
        PATH = "C:/Maven/apache-maven-3.9.5/bin$PATH"
        // Add other environment variables as needed
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                bat "C:\\Windows\\System32\\cmd.exe /c mvn clean test install"
            }
        }
        stage('Imagebuild'){
           steps{
               bat "docker build -t endsem.jar ."
           }
        }
        stage("Docker Login"){
            steps {
                bat "C:\\Windows\\System32\\cmd.exe /c docker login --username shreyaskumars --password Docker@shreyas12"
            }
        }
        stage("Push Image"){
            steps {
                bat "C:\\Windows\\System32\\cmd.exe /c docker push shreyaskumars/endsem.jar"
            }
        }

    }
    post{
        success{
               echo "All Previous Stages successfully executed"
        }
        failure{
               echo "Error in executing a staging"
        }
    }
}
